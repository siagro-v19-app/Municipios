<mvc:View controllerName="br.com.idxtecMunicipios.controller.Municipios"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Município">
							<t:Table id="tableMunicipios"
								rows="{path: '/Municipios',
									parameters: {
										expand: 'UfDetails'
									}
								}"
								class="sapUiSizeCondensed"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Auto"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Municípios"/> 
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Codigo" sortProperty="Codigo">
										<Label text="Código"/>
										<t:template>
											<Text text="{Codigo}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Nome" sortProperty="Nome">
										<Label text="Nome"/>
										<t:template>
											<Text text="{Nome}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="UfDetails/Sigla" sortProperty="UfDetails/Sigla">
										<Label text="UF" />
										<t:template>
											<Text text="{UfDetails/Sigla}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>