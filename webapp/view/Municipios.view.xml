<mvc:View controllerName="br.com.idxtecMunicipios.controller.Municipios"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page>
				<content>
					<t:Table id="tableMunicipios"
						rows="{path: '/Municipios',
							parameters: {
								expand: 'UfDetails'
							}
						}"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de Municípios"/> 
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Codigo" sortProperty="Codigo">
								<Label text="Código"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Nome" sortProperty="Nome">
								<Label text="Nome"/>
								<t:template>
									<Text text="{Nome}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="UfDetails/Sigla" sortProperty="UfDetails/Sigla">
								<Label text="UF" />
								<t:template>
									<Text text="{UfDetails/Sigla}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button id="refresh" icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>