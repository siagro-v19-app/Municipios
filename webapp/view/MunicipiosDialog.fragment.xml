<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
		id="MunicipiosDialog"
		title="{view>/titulo}"
		class="sapUiSmallMargin sapUiSizeCompact">
   	
   		<VBox id="vBoxMunicipio" class="sapUiSmallMargin sapUiSizeCompact">
   			<Label text="CÃ³digo:" labelFor="codigo"/>
			<Input value="{model>/Codigo}" id="codigo" required="true"/>
			
			<Label text="Nome:" labelFor="nome"/>
			<Input value="{model>/Nome}" id="nome" required="true"/>
			
			<Label text="UF:" labelFor="uf"/>
			<Input selectedKey="{path: 'model>/Uf', type: 'sap.ui.model.odata.type.Int32'}"
				textFormatMode="KeyValue"
				showSuggestion="true"
				showValueHelp="true"
				valueHelpRequest="handleSearchUf"
				suggestionItems="{
					path: '/Ufs',
					events: {
						dataReceived: '.ufReceived'
					}
				}"
				id="uf">
				<suggestionItems>
					<core:ListItem key="{Id}" text="{Sigla}"/>
				</suggestionItems>
			</Input>
		</VBox>
   		<buttons>
   			<Button text="Salvar" press="onSaveDialog"/>
   			<Button text="Fechar" press="onCloseDialog"/>
   		</buttons>
   </Dialog>
</core:FragmentDefinition>