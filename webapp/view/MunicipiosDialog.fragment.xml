<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
		id="MunicipiosDialog"
		title="{view>/titulo}"
		class="sapUiSmallMargin">
   	
   		<VBox id="vBoxMunicipio" class="sapUiSmallMargin">
   			<Label text="CÃ³digo:" labelFor="codigo"/>
			<Input value="{model>/Codigo}" id="codigo" required="true"/>
			
			<Label text="Nome:" labelFor="nome"/>
			<Input value="{model>/Nome}" id="nome" required="true"/>
			
			<Label text="UF:" labelFor="uf"/>
			<ComboBox selectedKey="{model>/Uf}"
				items="{path: '/Ufs'}"
				id="uf"
				required="true">
				<core:ListItem key="{Id}" text="{Sigla}"/>
			</ComboBox>
		</VBox>
   		
   		<buttons>
   			<Button text="Salvar" press="onSaveDialog"/>
   			<Button text="Fechar" press="onCloseDialog"/>
   		</buttons>
   </Dialog>
</core:FragmentDefinition>